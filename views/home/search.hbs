<section class="jumbotron ml-3 mr-3" id="bla">
    <h2 class="text-center mb-4">Users profiles</h2>
    <div class="text-center">
        <form action="/search/filtered" method="get">
            <span class="mr-2">Search: </span>
            <input type="text" id="searchUser" name="username" class="rounded p-2" placeholder="Enter username">
            <input type="submit" value="Search" class="btn btn-info">
        </form>
    </div>
</section>
<section>
   {{#if users}}
       {{#each users}}
           {{> user}}
       {{/each}}
   {{else}}
       <p class="text-center mt-2">There are no users matching {{query}}</p>
   {{/if}}
</section>